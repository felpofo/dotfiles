format = '$username$directory$package$git_commit$git_state$git_branch$git_status$duration $character'
add_newline = false

[username]
format = '[$user]($style)'
show_always = true

[directory]
format = ' in [$read_only]($read_only_style)[$path]($style)'
read_only = 'ro '
read_only_style = 'bold red'
truncation_length = 2
use_os_path_sep = false

[character]
success_symbol = "[>](bold green)"
error_symbol = "[!](bold red)"
vimcmd_symbol = "[|](bold green)"

[git_branch]
format = ' on [$branch]($style)'

[git_state]
format = ' [$state( $progress_current/$progress_total)]($style)'
rebase = 'rebasing'
merge = 'merging'
revert = 'reverting'
cherry_pick = 'cherry-picking'
bisect = 'bisecting'

[git_commit]
format = ' at [$hash$tag]($style)'

[git_status]
format = '( [\[$all_status$ahead_behind\]]($style))'
conflicted = '!'
modified = '*'
ahead = '>'
behind = '<'
diverged = ':'
renamed = 'r'
deleted = 'x'

[package]
format = ' [$version]($style)'
style = 'bold blue'

[battery]
disabled = true # TODO
