[global]
origin = bottom-right
offset = -2x-2
layer = top

frame_width = 2
frame_color = "#8aadf4"

font = Cascadia Mono 12
markup = full

icon_theme = ePapirus
enable_recursive_icon_lookup = true
min_icon_size = 48
max_icon_size = 48

idle_threshold = 120
timeout = 4
show_age_threshold = 30

highlight = "#8aadf4"
progress_bar_height = 8
progress_bar_corner_radius = 4
progress_bar_frame_width = 0

[urgency_low]
background = "#24273a"
foreground = "#cad3f5"

[urgency_normal]
background = "#24273a"
foreground = "#cad3f5"

[urgency_critical]
background = "#24273a"
foreground = "#cad3f5"
frame_color = "#ed8796"
